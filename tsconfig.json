{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "noImplicitReturns": true,
        "target": "ES2017",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "alwaysStrict": false,
        "noImplicitUseStrict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "sourceRoot": "./src/*.ts",
        "outDir": "dist",
        "pretty": false,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/tests/**/*"
    ]
}